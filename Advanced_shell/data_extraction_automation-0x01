#!/bin/bash

# Task 1: Extract Pokemon Data
# Parse data.json and format output using jq, awk, and sed

JSON_FILE="data.json"

if [ ! -f "${JSON_FILE}" ]; then
    echo "Error: ${JSON_FILE} not found!"
    exit 1
fi

# Extract name, height, weight, and type using jq
NAME=$(jq -r '.name' "${JSON_FILE}" | sed 's/^./\U&/')
HEIGHT=$(jq -r '.height' "${JSON_FILE}" | awk '{printf "%.1f", $1/10}')
WEIGHT=$(jq -r '.weight' "${JSON_FILE}" | awk '{printf "%.0f", $1/10}')
TYPE=$(jq -r '.types[0].type.name' "${JSON_FILE}" | sed 's/^./\U&/')

# Format and print output
echo "${NAME} is of type ${TYPE}, weighs ${WEIGHT}kg, and is ${HEIGHT}m tall."
