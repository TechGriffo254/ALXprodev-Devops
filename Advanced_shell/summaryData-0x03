#!/bin/bash

# Task 3: Summarize Pokemon Data
# Generate CSV report and calculate averages

INPUT_DIR="pokemon_data"
OUTPUT_CSV="pokemon_report.csv"

if [ ! -d "${INPUT_DIR}" ]; then
    echo "Error: Directory ${INPUT_DIR} not found!"
    exit 1
fi

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "${OUTPUT_CSV}"

# Extract data from each JSON file and append to CSV
for json_file in "${INPUT_DIR}"/*.json; do
    if [ -f "${json_file}" ]; then
        NAME=$(jq -r '.name' "${json_file}" | sed 's/^./\U&/')
        HEIGHT=$(jq -r '.height' "${json_file}" | awk '{printf "%.1f", $1/10}')
        WEIGHT=$(jq -r '.weight' "${json_file}" | awk '{printf "%.1f", $1/10}')
        
        echo "${NAME},${HEIGHT},${WEIGHT}" >> "${OUTPUT_CSV}"
    fi
done

echo "CSV Report generated at: ${OUTPUT_CSV}"
echo ""

# Display the CSV content
cat "${OUTPUT_CSV}"
echo ""

# Calculate averages using awk
awk -F',' 'NR>1 {
    height_sum += $2
    weight_sum += $3
    count++
}
END {
    if (count > 0) {
        printf "Average Height: %.2f m\n", height_sum/count
        printf "Average Weight: %.2f kg\n", weight_sum/count
    }
}' "${OUTPUT_CSV}"
